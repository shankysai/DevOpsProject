- hosts: all
  remote_user: ansadmin
  become: true
  tasks:
   - name: Install Docker
     when: inventory_hostname in groups['oel']
     yum:
       name: docker
       state: present
     tags:
         - oel

   - name: Start Docker
     when: inventory_hostname in groups['oel']
     service:
         name: docker
         state: started
     tags:
         - oel

   - name: Install Podman
     when: inventory_hostname in groups['centos']
     yum:
       name: podman
       state: present
     tags:
        - centos
    
